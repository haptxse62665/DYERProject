@model IEnumerable<DYEREntity.EF.tbl_Host>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Host Organization Information
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="col-md-12">
        <div class="box box-info">
            <!-- /.box-header -->
            <div class="box-body">
                <table id="exampleStudent" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Host Name</th>
                            <th>Location</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Type of Host</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => item.HostName)</td>
                                <td>@Html.DisplayFor(x => item.Location)</td>
                                <td>@Html.DisplayFor(x => item.Email)</td>
                                <td>@Html.DisplayFor(x => item.ContactNumber)</td>
                                <td>@Html.DisplayFor(x => item.Type)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Host Name</th>
                            <th>Location</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Type of Host</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</section>

