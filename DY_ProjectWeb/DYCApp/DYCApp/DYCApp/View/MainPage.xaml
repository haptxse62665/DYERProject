<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DYCApp"
             x:Class="DYCApp.MainPage"
             xmlns:custom="clr-namespace:DYCApp;assembly=DYCApp..NETStandard,Version=v2.0"
             BackgroundColor="#254f6e"
             >
    <MasterDetailPage.Master>
        <ContentPage BackgroundColor="#254f6e" Title="Master">
            <ContentPage.Content>
                <ScrollView>
                <StackLayout Margin="0,30,0,5" Spacing="0" >
                    <StackLayout Orientation="Horizontal" Padding="50, 0, 0, 50">
                        <Image Source="UBD_logo.png" HeightRequest="100" WidthRequest="60" HorizontalOptions="EndAndExpand" />
                        <Label Text="UNIVERSITI BRUNEI DARUSSALAM" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="White" FontFamily="Muli-SemiBold.ttf"/>
                    </StackLayout>
                    <StackLayout Padding="30,0,0,0" Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button_Overview"/>
                        </StackLayout.GestureRecognizers>
                        <Image Source="university128.png" HeightRequest="17" WidthRequest="17" HorizontalOptions="Start"/>
                        <Button Text="Overview" BackgroundColor="Transparent" TextColor="White" FontFamily="Muli-Regular.ttf" Clicked="Button_Overview"></Button>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand"/>
                    <StackLayout Padding="30,0,0,0" Orientation="Horizontal" >
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button_CreateNotifications"/>
                        </StackLayout.GestureRecognizers>
                        <Image Source="alert64.png" HeightRequest="17" WidthRequest="17" HorizontalOptions="Start"/>
                        <Button Text="Create Notifications" BackgroundColor="Transparent" TextColor="White" FontFamily="Muli-Regular.ttf" HorizontalOptions="StartAndExpand" Clicked="Button_CreateNotifications"></Button>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand"/>
                    <StackLayout Padding="30,0,0,0" Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button_Responses"/>
                        </StackLayout.GestureRecognizers>
                        <Image Source="error.png" HeightRequest="17" WidthRequest="17" HorizontalOptions="Start"/>
                        <Button Text="Responses" BackgroundColor="Transparent" TextColor="White" FontFamily="Muli-Regular.ttf" HorizontalOptions="StartAndExpand" Clicked="Button_Responses"></Button>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand"/>
                    <StackLayout Padding="30,0,0,0"  Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button_Arrived"/>
                        </StackLayout.GestureRecognizers>
                        <Image Source="airplane.png" HeightRequest="17" WidthRequest="17" HorizontalOptions="Start"/>
                        <Button Text="Arrived" BackgroundColor="Transparent" TextColor="White" FontFamily="Muli-Regular.ttf" HorizontalOptions="StartAndExpand" Clicked="Button_Arrived"></Button>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand"/>
                    <StackLayout Padding="30,0,0,0"  Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button_TeacherProfile"/>
                        </StackLayout.GestureRecognizers>
                        <Image Source="guest70.png" HeightRequest="17" WidthRequest="17" HorizontalOptions="Start"/>
                        <Button Text="Teacher profile" BackgroundColor="Transparent" TextColor="White" FontFamily="Muli-Regular.ttf" HorizontalOptions="StartAndExpand" Clicked="Button_TeacherProfile"></Button>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand"/>
                    <StackLayout Padding="30,0,0,0"  Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button_logout"/>
                        </StackLayout.GestureRecognizers>
                        <Image Source="logout128.png" HeightRequest="17" WidthRequest="17" HorizontalOptions="Start"/>
                        <Button Text="Logout" BackgroundColor="Transparent" TextColor="White" FontFamily="Muli-Regular.ttf" HorizontalOptions="StartAndExpand" Clicked="Button_logout"></Button>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand"/>

                </StackLayout>
                </ScrollView>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage Padding="10" BackgroundColor="#254f6e">
            <ContentPage.Content>
                <!--login-->
                <StackLayout Spacing="7" Padding="15">
                    <Image Source="UBD_logo_White.png"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   WidthRequest="100"
                   HeightRequest="200"/>


                    <local:CustomEntry  
                CornerRadius="15"  
                IsCurvedCornersEnabled="True"  
                BorderColor="White"       
                FontSize="15"  
                Placeholder="Username"  
                PlaceholderColor="White"  
                TextColor="White"  
                FontAttributes="Bold" 
                HeightRequest="37"
                WidthRequest="300"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"
            />
                    <local:CustomEntry  
                CornerRadius="15"  
                IsCurvedCornersEnabled="True"  
                BorderColor="White"        
                FontSize="15"  
                Placeholder="Password"  
                PlaceholderColor="White"  
                TextColor="White"  
                FontAttributes="Bold"  
                HeightRequest="37"
                WidthRequest="300"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"
                IsPassword="True"
            />
                    <Button Text="Login" 
                    TextColor="White"
                    BackgroundColor="#00A9DE"
                    CornerRadius="15"
                    HorizontalOptions="CenterAndExpand" 
                    VerticalOptions="StartAndExpand"
                    WidthRequest="300"
                    HeightRequest="37"
                    Clicked="Button_Login"/>


                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>


</MasterDetailPage>
